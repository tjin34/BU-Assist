<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape>
            <corners
                android:bottomRightRadius="@dimen/progress_radius"
                android:topRightRadius="@dimen/progress_radius"/>
            <solid android:color="@color/white"/>
            <stroke android:color="@color/mainTheme" android:width="1dp"/>
        </shape>
    </item>
    <item android:state_selected="false">
        <shape>
            <corners
                android:bottomRightRadius="@dimen/progress_radius"
                android:topRightRadius="@dimen/progress_radius"/>
            <solid android:color="@color/white"/>
            <stroke android:color="@color/tv_grey" android:width="1dp"/>
        </shape>
    </item>
</selector>