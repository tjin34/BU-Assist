<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape>
            <corners
                android:topRightRadius="@dimen/normalRadius"
                android:bottomRightRadius="@dimen/normalRadius"/>
            <solid android:color="@color/transparent"/>
            <stroke android:color="@color/secondary_pink" android:width="2dp"/>
        </shape>
    </item>
    <item android:state_selected="false">
        <shape>
            <corners
                android:topRightRadius="@dimen/normalRadius"
                android:bottomRightRadius="@dimen/normalRadius"/>
            <solid android:color="@color/secondary_pink"/>
        </shape>
    </item>
    <item android:state_pressed="true" >
        <shape>
            <corners
                android:topRightRadius="@dimen/normalRadius"
                android:bottomRightRadius="@dimen/normalRadius"/>
            <solid android:color="@color/third_pink"/>
        </shape>
    </item>
</selector>