<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/selector_bg_news"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <net.bucssa.buassist.Widget.RoundImageView
                android:id="@+id/iv_creatorAvatar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/profile_photo"
                android:scaleType="fitXY"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"/>

            <TextView
                android:id="@+id/tv_creator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发布者"
                android:textColor="@color/tv_black"
                android:textSize="14sp"
                android:layout_toRightOf="@id/iv_creatorAvatar"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"/>

            <TextView
                android:id="@+id/tv_classCode"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="CAS 101 A1"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:background="@drawable/bg_post_class_tag"
                android:padding="5dp"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"/>


            <TextView
                android:id="@+id/isHot"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="热门精华"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:background="@drawable/bg_post_hot_tag"
                android:gravity="center"
                android:padding="5dp"
                android:layout_toLeftOf="@id/tv_classCode"
                android:layout_marginRight="20dp"/>
            
        </RelativeLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@color/grey_200"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="【标题】这里是标题的位置"
                android:maxLines="1"
                android:textSize="14sp"
                android:textColor="@color/tv_black"/>

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="话题内容"
                android:gravity="center_vertical"
                android:textColor="@color/tv_grey"
                android:textSize="12sp"
                android:padding="5dp"
                android:lines="2"
                android:ellipsize="end" />


        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:layout_marginLeft="20dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/comment"
                    android:padding="2dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="20"
                    android:textSize="12sp"
                    android:textColor="@color/tv_grey"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="3dp"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/like"
                    android:padding="2dp"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="20"
                    android:textSize="12sp"
                    android:textColor="@color/tv_grey"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="3dp"/>


            </LinearLayout>

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2017 7-28 12:34"
                android:textColor="@color/tv_grey"
                android:textSize="12sp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"/>


        </RelativeLayout>




    </LinearLayout>

</LinearLayout>