<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rootView"
    android:background="@color/white"
    android:fitsSystemWindows="true">

    <include layout="@layout/header" android:id="@+id/header"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header">

        <LinearLayout
            android:id="@+id/bottom_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/grey_300">

                <ImageView
                    android:id="@+id/iv_send"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/selector_send_message"
                    android:layout_marginRight="10dp"
                    android:padding="3dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>


                <EditText
                    android:id="@+id/et_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/borderless_wrap_layout_white"
                    android:hint="输入想发送的消息"
                    android:textSize="14sp"
                    android:gravity="center_vertical"
                    android:padding="9dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/iv_send"/>

            </RelativeLayout>
        </LinearLayout>

        <net.bucssa.buassist.Widget.RefreshView
            android:id="@+id/rvRefresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/bottom_bar"
            android:layout_marginTop="5dp">

            <net.bucssa.buassist.Widget.CustomListViewForRefreshView
                android:id="@+id/lvFriend"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00000000"
                android:divider="#00000000"/>


        </net.bucssa.buassist.Widget.RefreshView>


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@drawable/bg_header_shadow"
        android:layout_below="@id/header"/>


</RelativeLayout>