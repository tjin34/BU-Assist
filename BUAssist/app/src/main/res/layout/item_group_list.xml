<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/rootView"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/selector_bg_news_shadow"
        android:gravity="center_vertical"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">



        <ImageView
            android:id="@+id/iv_groupCover"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/bucssa"
            android:layout_marginLeft="5dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_marginLeft="10dp">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/tv_member"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:text="15"
                    android:textColor="@color/tv_grey"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/iv_member"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:src="@drawable/members"
                    android:padding="3dp"
                    android:layout_toLeftOf="@id/tv_member"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/tv_groupName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="学习小组123"
                    android:textColor="@color/tv_black"
                    android:textSize="16sp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:layout_toLeftOf="@id/iv_member"
                    android:layout_centerVertical="true"/>




            </RelativeLayout>

            <TextView
                android:id="@+id/tv_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="这是一个厉害的地方"
                android:textColor="@color/tv_grey"
                android:textSize="12sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginRight="10dp"/>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>