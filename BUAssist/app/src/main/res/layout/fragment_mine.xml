<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <FrameLayout
            android:id="@+id/backDrop"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/mainTheme"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">

            <ImageView
                android:id="@+id/bucssa1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/bucssa"
                android:alpha="0.5"
                android:layout_marginTop="-45dp"
                android:layout_marginLeft="-20dp"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/bucssa2"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/bucssa"
                android:alpha="0.5"
                android:layout_marginTop="-45dp"
                android:layout_marginRight="-30dp"
                android:layout_gravity="right"
                android:visibility="gone"/>




            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_gravity="bottom"
                android:layout_marginLeft="130dp"
                android:layout_marginBottom="10dp">


                <TextView
                    android:id="@+id/tv_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="用户名"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_centerVertical="true"/>

                <ImageView
                    android:id="@+id/iv_sexDisplay"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:src="@drawable/selector_sex_display"
                    android:layout_toRightOf="@id/tv_username"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"/>


            </RelativeLayout>


            <LinearLayout
                android:id="@+id/ll_editProfile"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:background="@drawable/selector_bg_textview_borderless"
                android:gravity="center"
                android:layout_gravity="bottom|right"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="20dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/edit"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="修改个人资料"
                    android:textSize="14sp"
                    android:textColor="@color/mainTheme"
                    android:layout_marginLeft="5dp"/>

            </LinearLayout>

        </FrameLayout>



        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/border_bg_layer_4"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="20dp"/>

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/border_bg_layer_2"
            android:layout_marginTop="55dp"
            android:layout_marginLeft="25dp"/>

        <net.bucssa.buassist.Widget.RoundImageView
            android:id="@+id/iv_profile"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/profile_photo"
            android:scaleType="centerCrop"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="30dp"/>

        <TextView
            android:id="@+id/tv_self_intro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_self_intro_self"
            android:textSize="12sp"
            android:ellipsize="end"
            android:layout_below="@id/backDrop"
            android:layout_toRightOf="@id/iv_profile"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"/>

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/lulu_main"
            android:layout_marginLeft="38dp"
            android:layout_marginTop="12dp"/>



    </RelativeLayout>

    <LinearLayout
        android:id="@+id/profileBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/topBar"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        android:visibility="gone">


        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/mainBgTheme"
            android:layout_marginBottom="7dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="学院"
                android:textStyle="bold"
                android:textColor="@color/tv_black"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tv_college"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="College"
                android:textSize="12sp"
                android:textColor="@color/tv_normal"
                android:layout_marginLeft="80dp"/>


        </RelativeLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="生日"
                android:textStyle="bold"
                android:textColor="@color/tv_black"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tv_dateOfBirth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:text="1996年8月11日"
                android:textColor="@color/tv_normal"
                android:textSize="12sp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="感情状况"
                android:textStyle="bold"
                android:textColor="@color/tv_black"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tv_loveStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:text="未公开"
                android:textColor="@color/tv_normal"
                android:textSize="12sp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="邮箱"
                android:textStyle="bold"
                android:textColor="@color/tv_black"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tv_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:text="未公开"
                android:textColor="@color/tv_normal"
                android:textSize="12sp"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/mainBgTheme"
            android:layout_marginTop="7dp"/>
    </LinearLayout>




    <LinearLayout
        android:id="@+id/optionBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/profileBar"
        android:layout_marginTop="40dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dip"
            android:background="@color/mainTheme"/>

        <RelativeLayout
            android:id="@+id/rl_myFriend"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/selector_bg_textview_rect">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的好友"
                android:textColor="@color/tv_normal"
                android:textSize="14sp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/ic_arrow_right"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dip"
            android:background="@color/mainTheme"/>

        <RelativeLayout
            android:id="@+id/rl_myCollection"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/selector_bg_textview_rect">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的收藏"
                android:textColor="@color/tv_normal"
                android:textSize="14sp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/ic_arrow_right"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dip"
            android:background="@color/mainTheme"/>

        <RelativeLayout
            android:id="@+id/rl_setting"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/selector_bg_textview_rect">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设置"
                android:textColor="@color/tv_normal"
                android:textSize="14sp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/ic_arrow_right"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dip"
            android:background="@color/mainTheme"/>

        <RelativeLayout
            android:id="@+id/rl_logout"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/selector_bg_textview_rect">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="退出登录"
                android:textColor="@color/tv_normal"
                android:textSize="14sp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/ic_arrow_right"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dip"
            android:background="@color/mainTheme"/>


    </LinearLayout>


    <FrameLayout
        android:id="@+id/fl_bucssa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0.4"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-40dp"
        android:layout_marginLeft="-40dp">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/bg_bucssa_logo_shadow_2"
            android:layout_gravity="center"/>

        <ImageView
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:src="@drawable/bg_bucssa_logo_shadow_1"
            android:layout_gravity="center"/>

        <ImageView
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:src="@drawable/bucssa"
            android:layout_gravity="center"/>


    </FrameLayout>





</RelativeLayout>