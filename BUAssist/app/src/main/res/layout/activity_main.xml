<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/header" android:id="@+id/header"/>

    <!--底部导航栏 id：tap_bar-->
    <LinearLayout
        android:id="@+id/tap_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/grey_300" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <!--主页按钮配置-->
            <LinearLayout
                android:id="@+id/ll_home"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="23dp"
                    android:layout_height="23dp">

                    <ImageView
                        android:id="@+id/iv_home"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center|bottom"
                        android:src="@drawable/selector_botton_main" />

                </FrameLayout>

                <TextView
                    android:id="@+id/tv_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="首页"
                    android:textColor="@color/grey_600"
                    android:textSize="10sp" />
            </LinearLayout>

            <!--消息按钮配置，红点id为tip_message-->
            <LinearLayout
                android:id="@+id/ll_message"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="23dp"
                    android:layout_height="23dp">

                    <ImageView
                        android:id="@+id/iv_message"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center|bottom"
                        android:src="@drawable/selector_button_message" />

                    <ImageView
                        android:id="@+id/tip_message"
                        android:layout_width="7dp"
                        android:layout_height="7dp"
                        android:layout_gravity="end|top"
                        android:layout_marginTop="3dp"
                        android:src="@drawable/biaozhu_red"/>

                </FrameLayout>

                <TextView
                    android:id="@+id/tv_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="消息"
                    android:textColor="@color/grey_600"
                    android:textSize="10sp" />

            </LinearLayout>


            <!--发现按钮配置，红点id为tip_explore-->
            <LinearLayout
                android:id="@+id/ll_explore"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="23dp"
                    android:layout_height="23dp">

                    <ImageView
                        android:id="@+id/iv_explore"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center|bottom"
                        android:src="@drawable/selector_button_explore" />

                    <ImageView
                        android:id="@+id/tip_explore"
                        android:layout_width="7dp"
                        android:layout_height="7dp"
                        android:layout_gravity="end|top"
                        android:layout_marginTop="3dp"
                        android:src="@drawable/biaozhu_red"
                        android:visibility="gone"/>

                </FrameLayout>

                <TextView
                    android:id="@+id/tv_explore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="发现"
                    android:textColor="@color/grey_600"
                    android:textSize="10sp" />

            </LinearLayout>


            <!--我的按钮配置，红点id为tip_profile-->
            <LinearLayout
                android:id="@+id/ll_profile"
                android:layout_width="0dp"

                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="23dp"
                    android:layout_height="23dp">

                    <ImageView
                        android:id="@+id/iv_profile"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center|bottom"
                        android:src="@drawable/selector_button_mine" />

                    <ImageView
                        android:id="@+id/tip_profile"
                        android:layout_width="7dp"
                        android:layout_height="7dp"
                        android:layout_gravity="end|top"
                        android:layout_marginTop="3dp"
                        android:src="@drawable/biaozhu_red"
                        android:visibility="gone"/>

                </FrameLayout>

                <TextView
                    android:id="@+id/tv_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="我的"
                    android:textColor="@color/grey_600"
                    android:textSize="10sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


    <!--fragment内容-->
    <FrameLayout
        android:id="@+id/frame_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/tap_bar"
        android:layout_below="@id/header"/>
</RelativeLayout>
