<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/search_box_edit"
    android:layout_width="match_parent"
    android:layout_height="45dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/cancel"
            android:textSize="16sp"
            android:textColor="@color/semidark_red"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="5dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/borderless_wrap_layout_grey"
            android:layout_margin="7dp"
            android:layout_toLeftOf="@id/tv_cancel">

            <ImageView
                android:id="@+id/iv_search"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/ic_search"
                android:layout_margin="6dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"/>

            <ImageView
                android:id="@+id/iv_search_clear"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/ic_search_clear"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:padding="6dp"/>

            <EditText
                android:id="@+id/et_search"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:hint="请输入课程或教授名字搜索"
                android:gravity="center|left"
                android:textColorHint="@color/white"
                android:textSize="14sp"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/tv_grey"
                android:layout_toRightOf="@id/iv_search"
                android:layout_toLeftOf="@id/iv_search_clear"/>

        </RelativeLayout>

    </RelativeLayout>


</LinearLayout>

