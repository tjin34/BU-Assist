<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:clipToPadding="true"
    android:fitsSystemWindows="true">

    <View
        android:id="@+id/status_bar"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/sample_title"
            android:textColor="@color/mainTheme"
            android:textSize="16sp"
            android:gravity="center"/>

        <FrameLayout
            android:id="@+id/fl_bucssa"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:visibility="gone">

            <ImageView
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:src="@drawable/bg_bucssa_logo_shadow_2"
                android:layout_gravity="center"/>

            <ImageView
                android:layout_width="41dp"
                android:layout_height="41dp"
                android:src="@drawable/bg_bucssa_logo_shadow_1"
                android:layout_gravity="center"/>

            <ImageView
                android:id="@+id/bucssa1"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:src="@drawable/bucssa"
                android:layout_gravity="center"/>


        </FrameLayout>




        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/selector_back"
            android:padding="12dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:visibility="gone"/>


        <TextView
            android:id="@+id/tv_save"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="保存"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="16sp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_alignParentRight="true"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/iv_add"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/selector_new_msg_button"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:padding="13dp"
            android:layout_marginRight="5dp"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/selector_close"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:padding="13dp"
            android:layout_marginRight="5dp"
            android:visibility="gone"/>




        <TextView
            android:id="@+id/tv_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改信息"
            android:textColor="@color/tv_black"
            android:textSize="16sp"
            android:gravity="center"
            android:background="@drawable/button_selector"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:padding="6dp"
            android:layout_marginRight="10dp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="更多操作"
            android:textColor="@color/tv_black"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:padding="6dp"
            android:layout_marginRight="10dp"
            android:visibility="gone"/>


        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"
            android:textColor="@color/tv_black"
            android:textSize="16sp"
            android:gravity="center"
            android:background="@drawable/button_selector"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginLeft="20dp"
            android:visibility="gone"/>


    </RelativeLayout>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#40000000"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#20000000"/>

</LinearLayout>