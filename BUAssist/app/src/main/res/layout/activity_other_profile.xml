<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/header" android:id="@+id/header"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/topBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <FrameLayout
                    android:id="@+id/backDrop"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@color/mainTheme"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true">

                </FrameLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:background="@drawable/bg_header_shadow"
                    android:layout_below="@id/backDrop"/>

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/border_bg_layer_4"
                    android:layout_marginTop="50dp"
                    android:layout_centerHorizontal="true"/>

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/border_bg_layer_2"
                    android:layout_marginTop="55dp"
                    android:layout_centerHorizontal="true"/>

                <net.bucssa.buassist.Widget.RoundImageView
                    android:id="@+id/iv_profile"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/profile_photo"
                    android:scaleType="centerCrop"
                    android:layout_marginTop="60dp"
                    android:layout_centerHorizontal="true"/>

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/lulu_main"
                    android:layout_marginTop="12dp"
                    android:layout_centerHorizontal="true"/>


            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="5dp"
                android:gravity="center_horizontal"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="当当"
                        android:textColor="@color/black"
                        android:textSize="18sp"/>

                    <ImageView
                        android:id="@+id/ivSexDisplay"
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:src="@drawable/selector_sex"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"/>
                </LinearLayout>



                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp">


                    <TextView
                        android:id="@+id/tvClassYear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2017届"
                        android:textColor="@color/tv_grey"
                        android:layout_centerVertical="true"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/tvCollege"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="College of Art and Science"
                        android:textSize="14sp"
                        android:textColor="@color/tv_grey"
                        android:layout_marginLeft="10dp"/>

                </LinearLayout>

                <View
                    android:layout_width="250dp"
                    android:layout_height="3dp"
                    android:background="@drawable/bg_area_wrap_layout_red"/>

                <TextView
                    android:id="@+id/tvIntro"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:text="@string/sample_comment"
                    android:textColor="@color/tv_grey"
                    android:textSize="14sp"
                    android:padding="5dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"/>

                <LinearLayout
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/llMajor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:text="专业："
                            android:textSize="14sp"
                            android:textColor="@color/black"/>

                        <TextView
                            android:id="@+id/tvMajor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Computer Science/Economics"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:text="邮箱："
                            android:textSize="14sp"
                            android:textColor="@color/black"/>

                        <TextView
                            android:id="@+id/tvEmail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="lalala.345@bu.edu"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llDob"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:text="生日："
                            android:textSize="14sp"
                            android:textColor="@color/black"/>

                        <TextView
                            android:id="@+id/tvDateOrBirth"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1996年8月11日"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llRelationship"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:text="感情状态："
                            android:textSize="14sp"
                            android:textColor="@color/black"/>

                        <TextView
                            android:id="@+id/tvRelationship"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="未婚"/>

                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/tvSendMsg"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="发送消息"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:padding="7dp"
                    android:background="@drawable/selector_profile_button"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"/>

                <TextView
                    android:id="@+id/tvAddFriend"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="加为好友"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:padding="7dp"
                    android:background="@drawable/selector_profile_button"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@drawable/bg_header_shadow"
        android:layout_below="@id/header"/>

</RelativeLayout>